---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const cactusTech: { desc: string; href: string; stars?: string; title: string }[] = [
	{
		desc: "AI-powered solution for military performance reports and awards.",
		href: "https://rapidepr.com",
		title: "RapidEPR",
	},
	{
		desc: "Generate bedtime stories for your kids with AI.",
		href: "https://bedtimeai.blakegreen.dev",
		title: "BedtimeAI",
	},
];

const history: { dates: string; desc: string; href: string; title: string }[] = [
	{
		dates: "2022 - Present",
		desc: "Managing a team of AWS cloud engineers and architects.",
		href: "https://allcloud.io/",
		title: "Sr Manager of Cloud Engineering @ AllCloud",
	},
	{
		dates: "2007 - Present",
		desc: "NCOIC for base vulnerability management program.",
		href: "https://airforce.com",
		title: "Master Sergeant @ Air Force",
	},
	{
		dates: "2024 - Present",
		desc: "AI-powered solution for military performance reports and awards.",
		href: "https://rapidepr.com",
		title: "CTO @ RapidEPR",
	},
	{
		dates: "2014 - 2022",
		desc: "Leading & developing solutions on top of AWS",
		href: "https://intervision.com",
		title: "Principal Cloud Architect @ InterVision",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<p class="mb-4">
			AWS Cloud Architect - Serverless, IaC, AI
			<br />
			<br />
			Currently: Sr Manager of Cloud Engineering at <a
				class="cactus-link"
				href="https://allcloud.io/">AllCloud</a
			>.
			<br />
			CTO of
			<a class="cactus-link" href="https://rapidepr.com/">RapidEPR</a>.
			<br />
		</p>
		<a class="cactus-link mt-2" href="/consulting/">Work with me</a>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Work History</h2>
		<dl class="space-y-4">
			{
				history.map(({ dates, desc, href, title }) => (
					<div>
						<p class="text-xs text-gray-500">{dates} </p>
						<div class="flex flex-col gap-1 sm:flex-row">
							<dt>
								<span class="flex">
									<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
										{title}
									</a>
									-{"   "}
								</span>
							</dt>
							<dd>{desc}</dd>
						</div>
					</div>
				))
			}
		</dl>
	</section>

	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Projects</h2>
		<dl class="space-y-4">
			{
				cactusTech.map(({ desc, href, stars, title }) => (
					<div class="flex flex-col gap-2 sm:flex-row">
						<dt>
							<span class="flex">
								<a class="cactus-link" href={href} rel="noopener noreferrer" target="_blank">
									{title}
								</a>
								{stars && <span class="ml-1 text-xs text-gray-500">{stars}â˜…</span>}:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
